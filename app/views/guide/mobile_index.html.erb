	<div data-role="header">
            <h1><%= website_plain_english_formatted_name.upcase %></h1>
	</div><!-- /header -->
        <div class="ui-bar ui-bar-b centre">
            <h3>EVERY SPORT.  EVERY CHANNEL.</h3>
        </div>
	<div class="mobile_banner_advertisment centre">
	    <% if !logged_in? && Rails.env.production? %>
	    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
	    <!-- STV Mobile Banner -->
	    <ins class="adsbygoogle"
		 style="display:inline-block;width:320px;height:50px"
		 data-ad-client="ca-pub-4406472656891849"
		 data-ad-slot="3582922885"></ins>
	    <script>
	    (adsbygoogle = window.adsbygoogle || []).push({});
	    </script>
	    <% else %>
	    <img src="http://placehold.it/320x50" alt="placeholder 320x50">
	    <% end %>  
	</div>
	<div data-role="content">
            <% if !@regions.nil? %>
            <p><%= website_plain_english_formatted_name %> provides sports guide information for the following regions:</p>
                <ul data-role="listview" data-inset="true" data-theme="g">
                  <% @regions.each do |region| %>
                    <li><%= link_to region.name, URI.escape("/"+region.name+"/") %></li>      
                  <% end %>
                </ul>   
            <% end %>
	</div><!-- /content -->
	<div class="mobile_banner_advertisment centre">
	    <% if !logged_in? && Rails.env.production? %>
	    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
	    <!-- STV Mobile Banner -->
	    <ins class="adsbygoogle"
		 style="display:inline-block;width:320px;height:50px"
		 data-ad-client="ca-pub-4406472656891849"
		 data-ad-slot="3582922885"></ins>
	    <script>
	    (adsbygoogle = window.adsbygoogle || []).push({});
	    </script>
	    <% else %>
	    <img src="http://placehold.it/320x50" alt="placeholder 320x50">
	    <% end %>  
	</div>
	<div data-role="footer">
		<h4>Desktop | Mobile</h4>
	</div><!-- /footer -->
