<ul class="breadcrumb">
  <li>
    <a href="/"><%= website_plain_english_formatted_name.upcase %></a>
    <span class="divider">/</span>
  </li>
  <% if !@breadcrumb.nil? %>
  <li class="active">
    <%= @breadcrumb %>
  </li>
  <% elsif !@region.nil? && @sport.nil? && params[:search].nil? %>
  <li class="active">
    <%= @region.name %>
  </li>
  <% elsif !@sport.nil? %>
  <li>
    <%= link_to @region.name, URI.escape("/"+@region.name+"/") %>
    <span class="divider">/</span>
  </li>
  <li class="active">
    <%= @sport.name %>
  </li>
  <% elsif !params[:search].nil? %>
  <li>
    <%= link_to @region.name, URI.escape("/"+@region.name+"/") %>
    <span class="divider">/</span>
  </li>
  <li class="active">
    Search results for '<%= params[:search] %>'
  </li>
  <% end %>
</ul>
<ul class="breadcrumb">
  <li>
<% if !@breadcrumb.nil? %>
  
<% elsif @region.nil? %>
<a href="<%= URI.escape("http://"+fully_qualified_mobile_subdomain+"/") %>">Switch to a mobile-friendly page</a>
<% elsif !@region.nil? && @sport.nil? %>
<a href="<%= URI.escape("http://"+fully_qualified_mobile_subdomain+"/"+@region.name+"/") %>">Switch to a mobile-friendly page</a>
<% elsif !@region.nil? && !@sport.nil? %>
<a href="<%= URI.escape("http://"+fully_qualified_mobile_subdomain+"/"+@region.name+"/"+@sport.name+"/") %>">Switch to a mobile-friendly page</a>
<% end %>
  </li>
</ul>
