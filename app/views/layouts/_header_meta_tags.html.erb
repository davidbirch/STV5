<meta name="author" content="<%= meta_author %>">
<meta name="keywords" content="<%= meta_keywords %>">
<meta name="description" content="<%= meta_description %>">

<% if !@breadcrumb.nil? %>
  
<% elsif @region.nil? %>
<link rel="alternate" href="<%= URI.escape("http://"+fully_qualified_mobile_subdomain+"/") %>" >
<% elsif !@region.nil? && @sport.nil? %>
<link rel="alternate" href="<%= URI.escape("http://"+fully_qualified_mobile_subdomain+"/"+@region.name+"/") %>" >
<% elsif !@region.nil? && !@sport.nil? %>
<link rel="alternate" href="<%= URI.escape("http://"+fully_qualified_mobile_subdomain+"/"+@region.name+"/"+@sport.name+"/") %>" >
<% end %>